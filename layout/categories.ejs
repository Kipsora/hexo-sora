<%- partial('_partial/screen', {'is_content_screen': 'none'}) %>
<%
var stat = {};
site.posts.forEach(function(post) {
    post.categories.forEach(function(category) {
        if (stat[category.name] === undefined) {
            stat[category.name] = category;
        }
    });
});
%>
<link rel="stylesheet" type="text/css" href="<%= url_for('css/sora-content.css') %>" />
<style type="text/css">
    main {
        margin-top: 80px;
    }
    main header {
        position: relative;
        text-align: center;
        margin-bottom: 50px;
        color: #9c9c9c;
        display: block;
    }
    main header h1 {
        display: inline-block;
        font-size: 25px;
        font-weight: 400;
        padding-right: 15px;
        border-right: 1px dashed #ddd;
        color: #676767;
        clear: both;
        margin: .67em 0;
    }
    main header p {
        display: inline-block;
        padding-left: 10px;
        margin-bottom: 1.5em;
    }
    main #sora-category {
        /*width: 500px;*/
        position: relative;
        margin-left: auto;
        margin-right: auto;
        line-height: 2em;
    }
    main #sora-category span {
        font-weight: normal;
        padding-left: 10px;
        padding-right: 10px;
        white-space: nowrap;
    }
    main #sora-category a {
        color: black;
        transition: all .2s linear;
    }
    main #sora-category a:hover {
        color: #3877d9;
    }
</style>

<div id="sora-content">
    <div class="scrollbar" id="sora-topbar"></div>
    <%- partial('_partial/navigator')%>
    <main class="main-font">
        <header class="page-header"><h1>分类</h1> <p>Categories</p></header>
        <div id="sora-category">
            <%
            for (var name in stat) {
                if (stat.hasOwnProperty(name)) {
                    var category = stat[name];
            %>
            <span><a href="<%= url_for(category.path) %>"><i class="fa fa-folder" aria-hidden="true"></i> <%= category.name %> (<%= category.posts.length %> 篇文章)</a></span>
            <%
                }
            }
            %>
        </div>
        <hr />
        <%- partial('_partial/footer')%>
    </main>
    <button id="sora-totop" class="button-totop">
        <i class="fa fa-angle-double-up" aria-hidden="true"></i>
    </button>
</div>
<script src="<%= url_for('js/sora-content.js') %>"></script>
<script src="<%= url_for('js/sora.js') %>"></script>
