@import "constant.styl"
@import "devices.styl"

main
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
  background-color: rgba(255, 255, 255, 0.73);
  padding: 1px 20px;

  article
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(128, 128, 128, 0.59);
    margin-top: 50px;
    margin-bottom: 0;
    position: relative;
    height: 330px;
    transition: all .2s linear;

    &:hover
      box-shadow: 0 0 20px rgba(128, 128, 128, 0.94);
      transition: all .2s linear;
      .article-thumb a img
        transform: scale(1.1);
    .article-thumb
      width: 55%;
      float: left;
      a
        overflow: hidden;
        display: block;
        height: 330px;
        border-radius: 10px 0 0 10px;
        -webkit-mask-image: -webkit-radial-gradient(white, black);
        img
          object-fit: cover;
          width: 100%;
          height: 100%;
          transition: all .2s linear;
    .article-thumb-right
      float right
      a
        border-radius: 0 10px 10px 0;
    .article-content
      margin-left: 15px;
      margin-right: 15px;
      margin-top: 30px;
      float: left;
      display: inline-block;
      width: 40%;
      padding-left: 20px;
      padding-right: 10px;
    .article-content-right
      float: right;
      padding-right: 30px;
      padding-left: 0;
    .article-title
      margin-top: 0.7em;
      margin-bottom: 0.6em;
      color: rgba(80, 78, 78, 0.80);
      font-weight: 800;
      font-size: 1.17em;
      font-family font-serif
      a
        color: rgba(80, 78, 78, 0.80);
        transition: all .2s linear;
        &:hover
          color: main-color;
          transition: all .2s linear;
    .article-date, .article-meta
      color: rgba(136, 136, 136, 0.9);
      font-size: 13px;
      font-family font-meta-serif
    .article-meta span
      color: rgba(136, 136, 136, 0.9);
      font-size: 12px;
      margin-right: 15px;
      font-family font-serif
    .article-description
      margin-top: 1.7em;
      margin-bottom: 1em;
      color: rgba(104, 101, 101, 0.78);
      font-size: 16px;
      height: 100px;
      line-height: 25px;     /* fallback */

      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
    .article-bottom
      margin-top: 1.5em;
      font-size: 17px;
      font-family font-serif
      font-weight 800
      a
        color: rgba(86, 86, 86, 0.79);
        transition: all .2s linear;
        &:hover
          color: main-color

  @media $media-max-phone
    background-color: rgba(255, 255, 255, 0.80);
    article
      overflow:auto;
      height: auto;
      .article-thumb
        width: 100%;
        float: none;
        a
          border-radius: 10px 10px 0 0;
      .article-thumb-right
        float: none;
        a
          border-radius: 10px 10px 0 0;
      .article-content
        padding-left: 0;
        padding-right: 0;
        width: 85%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 25px;
        display: block;
        float: none;
        font-family font-sans-chinese
      .article-content-right
        padding-left: 0;
        padding-right: 0;
        float: none;
        width: 85%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 25px;
        display: block;
      .article-title
        text-align: center;
        font-family font-sans-chinese
      .article-date
        font-family font-sans-chinese
      .article-meta
        width: fit-content;
        margin-left: auto;
        margin-right: auto;
        span
          font-family font-sans-chinese
      .article-bottom
        margin-bottom: 2em;
        font-family font-sans-chinese

.footer
  text-align: center;
  color: rgba(148, 148, 148, 0.79);
  margin-bottom: 15px;
  margin-top: 25px;
  font-size: 13px;
  font-family: 'Ubuntu', sans-serif;
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
  background-color: rgba(255, 255, 255, 0.73);
  padding: 1px 20px;

  #copyright i
    color: dodgerblue
  hr
    border-color: rgba(197, 197, 197, 0.27);
  & > div
    margin-top: 0.7em;
  a
    color: rgb(79, 79, 79);
  p
    margin-top: 5px;
  img
    height: 1.2em;
    max-height: 1.2em;
    margin-left: 5px;
    margin-right: 5px;
    padding: 0;